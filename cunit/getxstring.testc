     * interpretation and note the conservative one in a comment.
     */
    TESTCASE(getbastring, "foo(bar baz", '(', "foo", BLEN("foo("));
    TESTCASE(getbastring, "foo)bar baz", ')', "foo", BLEN("foo)"));
    TESTCASE(getbastring, "foo{bar baz", ' ', "foo{bar", BLEN("foo{bar ")); /* should be: '{', "foo" */
