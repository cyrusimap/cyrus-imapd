#!perl
use Cassandane::Tiny;

sub test_good_mailboxes_virtdomains
    :VirtDomains
{
    my ($self) = @_;

    my $admintalk = $self->{adminstore}->get_client();

    my @good_mailboxes = (
        'user.cassandane.$RACL',
        'user.foo@domain.com',
    );

    foreach my $m (@good_mailboxes) {
        $admintalk->create($m);
        $self->assert_str_equals('ok',
            $admintalk->get_last_completion_response());
    }
}
