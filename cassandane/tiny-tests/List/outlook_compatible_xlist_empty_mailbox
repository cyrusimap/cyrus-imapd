#!perl
use Cassandane::Tiny;

sub test_outlook_compatible_xlist_empty_mailbox
    :UnixHierarchySep
    ($self)
{
    my $imaptalk = $self->{store}->get_client();

    my $data = $imaptalk->xlist("", "");

    $self->assert(ref $data, "expected list response, got scalar: $data");

    $self->assert_mailbox_structure($data, '/', {
        '' => [ '\\Noselect' ],
    });
}
