#!perl
use Cassandane::Tiny;

sub test_card_get_no_addressbookid
    :min_version_3_9
    ($self)
{
    my $jmap = $self->{jmap};

    my $res = $jmap->CallMethods([
        ['ContactCard/get', {
            addressbookId => "Default",
        }, 'R1']
    ]);

    $self->assert_deep_equals(
      { type => "invalidArguments", arguments => [ "addressbookId" ] },
      $res->[0][1],
    );
}
